{
    "version": 2,
    "builds": [
        {
            "src": "wsgi.py",
            "use": "@vercel/python",
            "config": {
                "pythonVersion": "3.9",
                "maxLambdaSize": "50mb",
                "includeFiles": [
                    "app.py",
                    "templates/**",
                    "static/**",
                    "src/**",
                    "chatflow/**",
                    "forms.py"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "wsgi.py"
        }
    ],
    "env": {
        "FLASK_APP": "wsgi.py",
        "FLASK_ENV": "production",
        "PYTHONPATH": ".",
        "PORT": "5000"
    }
} 